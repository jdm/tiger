{
  "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Tiger",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "clipboard": {
        "readText": true,
        "writeText": true
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "protocol": {
        "asset": true,
        "assetScope": {
          "allow": ["**"]
        }
      },
      "shell": {
        "open": true
      },
      "window": {
        "minimize": true,
        "maximize": true,
        "unmaximize": true,
        "close": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.agersant.tiger",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Tiger",
        "fullscreen": false,
        "maximized": true,
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "minWidth": 1280,
        "minHeight": 1000,
        "decorations": false,
        "fileDropEnabled": false
      }
    ]
  }
}
